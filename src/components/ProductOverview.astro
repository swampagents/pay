---
const features = [
  {
    designation: 'HW-01',
    label: 'HARDWARE',
    title: 'Hardened Terminals',
    description: 'Purpose-built payment terminals with encrypted firmware. No cloud dependency. Process transactions on-device — built to operate when everything else fails.',
  },
  {
    designation: 'SIG-02',
    label: 'SIGNALS',
    title: 'Tap-to-Pay',
    description: 'NFC-enabled mobile payments. Customers tap their device — no apps, no accounts, no tracking. Clean signal, zero intercept.',
  },
  {
    designation: 'COM-03',
    label: 'COMSEC',
    title: 'Wallet Native',
    description: 'Accept crypto from any major wallet. On-chain settlement with zero custodial risk. Your keys, your funds. No intermediaries on the wire.',
  },
  {
    designation: 'OPS-04',
    label: 'OPSEC',
    title: 'Zero Knowledge',
    description: 'Transaction data never touches our servers. No customer profiles. No behavioral analytics. Total operational security.',
  },
];
---
<section class="relative overflow-hidden border-t border-olive/20 bg-bunker py-28" id="features" aria-label="Product overview">
  <img
    src={`${import.meta.env.BASE_URL}/base.jpg`}
    alt=""
    class="war-photo-bg"
    style="object-position: center 35%;"
    loading="lazy"
    aria-hidden="true"
  />
  <div class="war-photo-overlay" aria-hidden="true"></div>

  <div class="relative z-10 mx-auto max-w-7xl px-6">
    <div class="max-w-2xl">
      <p class="section-label-military">Field Manual — Sec. 4: Capabilities</p>
      <h2 class="font-stencil text-3xl tracking-wide text-white sm:text-4xl">
        Payment infrastructure that <span class="text-phosphor crt-glow">answers to no one</span>.
      </h2>
      <p class="mt-4 text-lg text-smoke">
        Four pillars. One mission. Restore financial privacy to every transaction.
      </p>
    </div>

    <div class="mt-16 grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
      {features.map(({ designation, label, title, description }) => (
        <div class="group rounded border border-olive/20 bg-midnight/70 p-6 backdrop-blur-sm transition-colors hover:border-phosphor/30">
          <div class="flex items-center justify-between">
            <span class="font-mono text-xs text-khaki">[{label}]</span>
            <span class="dog-tag">{designation}</span>
          </div>
          <h3 class="mt-4 font-stencil text-lg text-white">{title}</h3>
          <p class="mt-3 text-sm leading-relaxed text-smoke">{description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
